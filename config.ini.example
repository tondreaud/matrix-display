[Matrix]
hardware_mapping = adafruit-hat-pwm
brightness = 50
gpio_slowdown = 2
limit_refresh_rate_hz = 100
shutdown_delay = 30

[Spotify]
; Get these from https://developer.spotify.com/dashboard
client_id = YOUR_CLIENT_ID_HERE
client_secret = YOUR_CLIENT_SECRET_HERE
redirect_uri = http://127.0.0.1:8080/callback
; device_whitelist = ['Marantz AVR', 'Samsung TV']

[Subway]
; Stop ID from MTA GTFS data
; Find stop IDs at: https://github.com/Andrew-Dickinson/nyct-gtfs
; East Village stations:
;   L06 = 1st Ave (L)
;   F14 = 2nd Ave (F,M)  
;   636 = Astor Place (6)
;   R20 = 8th St-NYU (N,R,W)
stop_id = 635
; Direction: N (uptown) or S (downtown/brooklyn)
direction = S
; Comma-separated subway lines to show
lines = 4,5,6

